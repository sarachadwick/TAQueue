<% provide(:title, 'Create Semester') %>

<div class="col-md-6 col-md-offset-3">
  <%= form_for(Semester.new(), url: create_semester_url) do |f| %>
  <%= f.label :semester_length, class: 'input-control-sem' %>
  <%= f.text_field :semester_length, class: 'form-control-semester' %>

  <%= f.label :start_date, class: 'input-control-sem' %>
  <%= f.text_field :start_date, class: 'form-control-semester'  %>

  <%= f.submit "Create Semester", class: "btn btn-primary" %>
  <% end %>
</div>
